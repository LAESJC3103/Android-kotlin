<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pacificsoft.pscomandera">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_comanda"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_comanda"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ModificadoresActivity"
            android:theme="@style/ContentThemeModificadores"
            ></activity>
        <activity
            android:name=".DetalleArticuloComandaActivity"
            android:label="@string/title_activity_detalle_articulo_comanda"
            android:theme="@style/ContentThemeDetalleArticulo"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".CartaActivity"
            android:label="@string/title_activity_carta"
            android:parentActivityName=".MesaActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MesaActivity" />
        </activity>
        <activity
            android:name=".ComandaActivity"
            android:label="@string/title_activity_comanda"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".GrupoCartaActivity"
            android:label="@string/title_activity_grupo_carta"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".AreaActivity"
            android:label="@string/title_activity_areas"/>
        <activity
            android:name=".MesaActivity"
            android:label="@string/title_activity_mesas"/>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label=""
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".AcercaDeActivity"
            android:label="@string/title_activity_acerca_de"
            android:theme="@style/AppTheme"/>
        <activity android:name=".MainActivity"/>
        <activity
            android:name=".ConfiguracionActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".MasAplicacionesActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
    </application>

</manifest>