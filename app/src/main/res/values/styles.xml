<resources xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/text_size</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:windowBackground">@drawable/background_generico</item>

        <!-- Color del hint textInputLayout-->
        <item name="android:textColorHint">@color/colorBlanco</item>
        <!-- Color del texto en general textInputLayout-->
        <!--item name="android:textColorPrimary">@drawable/text_color_disabled_generico</item-->
        <!-- Color de texto TextInputLayout underline -->
        <item name="android:textColorPrimary">@drawable/color_status_generico</item>
        <item name="colorControlNormal">@color/colorBlanco</item>
        <!-- Color de underline cuando se esta escribiendo TextInputLayou-->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorBlanco</item>

        <!--<item name="actionModeStyle">@style/YourActionModeStyle</item>-->
        <item name="windowActionModeOverlay">false</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>

        <item name="alertDialogTheme">@style/AppAlertDialog</item>

        <item name="android:fontFamily">@font/raleway_font_family</item>
        <!--<item name="actionMenuTextColor">@color/white</item>-->

    </style>


