<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radiusButton" />
            <gradient android:angle="270"
                android:endColor="@color/colorButtonComandaFinal"
                android:startColor="@color/colorButtonComanda"
                android:type="linear" />
            <!--<solid android:color="@color/colorPrimary" />-->
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radiusButton"/>
            <gradient
                android:angle="270"
                android:startColor="@color/colorButtonComandaDisabled"
                android:endColor="@color/colorButtonComandaFinalDisabled"
                android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/radiusButton"/>
            <gradient
                android:angle="270"
                android:startColor="@color/colorButtonComanda"
                android:endColor="@color/colorButtonComandaFinal"
                android:type="linear" />
        </shape>
    </item>
</selector>