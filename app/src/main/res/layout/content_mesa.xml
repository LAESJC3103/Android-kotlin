<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MesaActivity"
    tools:showIn="@layout/app_bar_mesa">

    <android.support.constraint.Guideline
        android:id="@+id/guidelineMarginLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/vertical_margin_mesa" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinePaddingRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/vertical_margin_mesa" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintContentCabecera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_cabecera_mesas"
        android:paddingBottom="@dimen/padding_cabecera_mesas"
        app:layout_constraintLeft_toRightOf="@+id/guidelineMarginLeft"
        app:layout_constraintRight_toLeftOf="@+id/guidelinePaddingRight"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTituloArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textAllCaps="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewContentItemsMesa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/corner_radius_cardview_content_mesas"
        app:cardElevation="@dimen/elevation_cardview_content_mesas"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintLeft_toRightOf="@+id/guidelineMarginLeft"
        app:layout_constraintRight_toLeftOf="@+id/guidelinePaddingRight"
        app:layout_constraintTop_toBottomOf="@+id/constraintContentCabecera">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ScrollView
                    android:id="@+id/scrollViewMesas"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/imageViewFooterDividerContentMesa"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/reciclerViewMesas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        tools:itemCount="6"
                        tools:layoutManager="android.support.v7.widget.GridLayoutManager"
                        tools:listitem="@layout/item_mesa"
                        tools:orientation="vertical"
                        tools:scrollbars="none"
                        tools:spanCount="@integer/columnsGridViewMesas">

                    </android.support.v7.widget.RecyclerView>
                </ScrollView>

                <ImageView
                    android:id="@+id/imageViewFooterDividerContentMesa"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/height_footer_divider_content_mesa"
                    android:background="@color/colorDivider"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </android.support.v4.widget.SwipeRefreshLayout>



    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/activity_horizontal_margin" />

</android.support.constraint.ConstraintLayout>