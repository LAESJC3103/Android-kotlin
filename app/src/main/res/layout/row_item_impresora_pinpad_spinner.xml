<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    style="@style/styleLayoutItemSpinnerMain"
    android:id="@+id/lyItemImpresoraPinpad"
    >

    <TextView
        android:id="@+id/lblIconImpresoraPinpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/fa_solid_900"
        android:text="@string/icon_print"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spinnerLblNombreDispositivo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre descriptivo del dispositivo"
        app:layout_constraintLeft_toRightOf="@+id/lblIconImpresoraPinpad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spinnerLblMacDispositivo"
        style="@style/lblSecondItemSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dirreccion MAC del dispositivo"
        app:layout_constraintLeft_toRightOf="@+id/lblIconImpresoraPinpad"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerLblNombreDispositivo" />


</android.support.constraint.ConstraintLayout>