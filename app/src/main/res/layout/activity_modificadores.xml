            android:layout_height="wrap_content"
            style="@style/RippleStyleBlue"
            app:mrl_rippleDelayClick="false"
            android:paddingStart="@dimen/padding_right_left_button_siguiente_activity_modificador"
            android:paddingEnd="@dimen/padding_right_left_button_siguiente_activity_modificador"
